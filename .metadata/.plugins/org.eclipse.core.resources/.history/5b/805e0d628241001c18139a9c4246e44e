package application.controller;

import application.model.*;


import java.sql.SQLException;

import com.j256.ormlite.dao.*;
import com.j256.ormlite.jdbc.DataSourceConnectionSource;

public class DriversController {

	private Dao<Drivers, Integer> driversDao;
	
	 private DataSourceConnectionSource dataBaseConnection;
	
	public DriversController(DataSourceConnectionSource dataSourceConnection) {
		
		this.dataBaseConnection = dataBaseConnection;
		
		try {
			driversDao = DaoManager.createDao(dataBaseConnection, Drivers.class);
		} catch (SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
}
}
